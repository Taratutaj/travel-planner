{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "static/**", "use": "@vercel/static" }, // Dodaj dwie gwiazdki, żeby brało podfoldery (images)
    { "src": "js/**", "use": "@vercel/static" }     // Dodaj to, żeby widziało Twoje skrypty
  ],
  "rewrites": [
    { "source": "/api/generate_plan", "destination": "api/index.py" }, // Pełna ścieżka do funkcji
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
